<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emjoe.guessinggame.MainActivity">

    <ImageView
        android:id="@+id/imageView_heart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        app:srcCompat="@drawable/heart2" />

    <ImageView
        android:id="@+id/imageView_heart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_heart1"
        android:layout_toRightOf="@+id/imageView_heart1"
        app:srcCompat="@drawable/heart2" />

    <ImageView
        android:id="@+id/imageView_heart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/heart2" />

    <ImageView
        android:id="@+id/imageView_heart4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_heart3"
        android:layout_toRightOf="@+id/imageView_heart3"
        app:srcCompat="@drawable/heart2" />

    <ImageView
        android:id="@+id/imageView_heart5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_heart4"
        android:layout_toRightOf="@+id/imageView_heart4"
        app:srcCompat="@drawable/heart2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_heart1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:textSize="22dp"
        android:text="Találd ki melyik számra gondoltam!" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="+" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button_plus"
        android:layout_alignStart="@+id/button_plus"
        android:layout_below="@+id/button_plus"
        android:layout_marginTop="78dp"
        android:text="-" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Send" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_plus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="0"
        android:textSize="28dp" />
</RelativeLayout>
